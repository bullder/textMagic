{
    "name": "bullder/text-magic",
    "description": "Quick test for amth",
    "keywords": [
        "math test"
    ],
    "license": "MIT",
    "require": {
        "symfony/framework-bundle": "^7.1",
        "twig/twig": "^3.12",
        "symfony/flex": "^2.4",
        "symfony/runtime": "^7.1",
        "symfony/console": "^7.1",
        "symfony/yaml": "^7.1",
        "symfony/twig-bundle": "^7.1",
        "doctrine/dbal": "^3",
        "doctrine/doctrine-bundle": "^2.13",
        "doctrine/doctrine-migrations-bundle": "^3.3",
        "doctrine/orm": "^3.2",
        "symfony/dotenv": "^7.1"
    },
    "config": {
        "allow-plugins": {
            "symfony/flex": true,
            "symfony/runtime": true
        }
    },
    "scripts": {
        "phpunit-with-coverage": "vendor/bin/phpunit --coverage-clover=coverage.xml",
        "phpstan": "vendor/bin/phpstan analyze src/",
        "phpcs": "vendor/bin/phpcs --colors -n -s --standard=phpcs_ruleset.xml src/",
        "php-cs-fixer": "vendor/bin/php-cs-fixer fix --dry-run",
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "symfony/browser-kit": "^7.1",
        "symfony/css-selector": "^7.1",
        "symfony/phpunit-bridge": "^7.1",
        "doctrine/doctrine-fixtures-bundle": "^3.6",
        "phpstan/phpstan": "^1.12",
        "squizlabs/php_codesniffer": "^3.10",
        "friendsofphp/php-cs-fixer": "^3.64"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    }
}
